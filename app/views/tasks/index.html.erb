<p id="notice"><%= notice %></p>
<div class="main">
<%= t('view.sample') %>
<h1 style="text-align:"center;">Tasks</h1>
<table class="table">
  <thead style="background-color: #fb9224;">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Status</th>
      <th scope="col">Start date</th>
      <th scope="col">End date</th>
      <th scope="col">Content</th>
      <th scope="col">Priority</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <th scope="row"><%= task.id %></th>
      <td><%= task.name %></td>
      <td><%= task.status %></td>
      <td><%= task.start_date %></td>
      <td><%= task.end_date %></td>
      <td><%= task.content %></td>
      <td><%= task.priority %></td>
      <td>
        <%= link_to 'Show', task, class:"btn btn-outline-success my-2 my-sm-0" %>
        <%= link_to 'Edit', edit_task_path(task), class:"btn btn-outline-primary my-2 my-sm-0" %>
        <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger my-2 my-sm-0" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
